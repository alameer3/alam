const topContent = [
  { id: 1, title: 'فيلم الحركة الجديد', views: 15420, rating: 4.8, type: 'فيلم' },
  { id: 2, title: 'المسلسل الدرامي', views: 12350, rating: 4.6, type: 'مسلسل' },
  { id: 3, title: 'البرنامج الكوميدي', views: 9870, rating: 4.4, type: 'برنامج' },
