];

interface ContentFormData {
  title: string;
  titleArabic: string;
  description: string;
  descriptionArabic: string;
  type: string;
  year: number;
  language: string;
  quality: string;
  rating: number;
  duration: number;
  posterUrl: string;
  videoUrl: string;
